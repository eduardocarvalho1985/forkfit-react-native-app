{
  "cli": {
    "version": ">= 7.6.0",
    "appVersionSource": "remote"
  },
  "build": {
    // Profile for creating a development client.
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "autoIncrement": true,
      "ios": {
        "distribution": "internal",
        "buildConfiguration": "Debug"
      },
      // Android-specific settings for this profile.
      "android": {
        // As per documentation, gradleCommand goes inside the 'android' block.
        // This command builds the 'development' flavor in 'debug' mode.
        "gradleCommand": ":app:assembleDevelopmentDebug"
      },
      "env": {
        "APP_NAME": "ForkFit Dev",
        "EAS_BUILD_PROFILE": "development",
        "API_URL_DEV": "https://api.dev.forkfit.app/api"
      }
    },
    // Profile for creating builds for testers.
    "preview": {
      "distribution": "internal",
      "autoIncrement": true,
      "ios": {
        "distribution": "internal",
        "buildConfiguration": "Release"
      },
      "android": {
        "buildType": "apk",
        // This command builds the 'preview' flavor in 'release' mode.
        "gradleCommand": ":app:assemblePreviewRelease"
      },
      "env": {
        "APP_NAME": "ForkFit Preview",
        "EAS_BUILD_PROFILE": "preview",
        "API_URL_DEV": "https://api.dev.forkfit.app/api"
      }
    },
    // Profile for creating the final app for the public stores.
    "production": {
      "distribution": "store",
      "autoIncrement": true,
      "ios": {
        "distribution": "store",
        "buildConfiguration": "Release"
      },
      "android": {
        // This command builds the 'production' flavor as an App Bundle (.aab).
        // The docs use :app:bundleProductionRelease for the final store asset.
        "gradleCommand": ":app:bundleProductionRelease"
      },
      "env": {
        "APP_NAME": "ForkFit",
        "EAS_BUILD_PROFILE": "production",
        "API_URL_PROD": "https://api.forkfit.app/api"
      }
    }
  },
  "submit": {
    "production": {}
  }
}